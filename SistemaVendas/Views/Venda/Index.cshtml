@model List<VendaModel>

@{
    ViewData["Title"] = "Lista Vendas";
}
<meta charset="utf-8" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="d-grid gap-2 d-md-flex justify-context-md-start">
                <a class="btn btn-primary" role="button" asp-controller="Venda" asp-action="Add">Registrar Venda</a>
            </div>

            <div class="text-center">
                <h4 class="display-4">Lista de Vendas</h4>
            </div>

            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Vendedor</th>
                        <th scope="col">Produto</th>
                        <th scope="col">Data</th>
                        <th scope="col">Quantidade Produto</th>
                        <th scope="col">Valor Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var venda in Model)
                        {
                            <tr>
                                <th scope="col">@venda.Id</th>
                                <td>@venda.Cliente.Nome</td>
                                <td>@venda.Vendedor.Nome</td>
                                <td>@venda.Produto.Nome</td>
                                <td>@venda.Data.ToString("dd/MM/yyyy")</td>
                                <td>@venda.Quantidade_Produto</td>                                
                                <td>R$ @venda.Total</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-danger" role="button" asp-route-idVenda="@venda.Id" asp-controller="Venda" asp-action="Delete">Excluir</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
